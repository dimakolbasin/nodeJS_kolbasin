  "dependencies": {
    "ejs": "^3.1.5",
    "normalize.css": "^8.0.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.6",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "npm-run-all": "^4.1.5",
